#to assign a variable any value we use = sign
var = 7#this is an integer
name = "Ravi" #This is a string
fl = 3.5 #This is  a floating-point number ie a decimal
#To convert floating point no. into a integer use the following syntax
print(int(fl))
var1 = 2215677#to delete a variable use this syntax
del(var1)#Var1 is non-existant according to the program now
print(name[0])#This prints the first letter of the string as in computing nos start from 0
#To print a range of letters put a :
print(name[1:3])
